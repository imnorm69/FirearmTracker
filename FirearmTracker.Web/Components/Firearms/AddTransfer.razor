@page "/firearms/{FirearmId:int}/transfer/add"
@page "/firearms/{FirearmId:int}/transfer/{ActivityId:int}/edit"
@attribute [Authorize(Roles = "Owner,Administrator,PowerUser")]
@using FirearmTracker.Core.Interfaces
@using FirearmTracker.Core.Models
@using FirearmTracker.Core.Enums
@using System.Text.Json
@using FirearmTracker.Web.Components
@inject IActivityRepository ActivityRepository
@inject IFirearmRepository FirearmRepository
@inject NavigationManager Navigation
@rendermode InteractiveServer

<link href="css/firearms.css" rel="stylesheet" />

<div class="form-container">
    <h3 class="firearms-header">@(isEditMode ? "Edit" : "Record") Transfer/Inheritance</h3>

    @if (firearm != null)
    {
        <p><strong>Firearm:</strong> @firearm.Manufacturer @firearm.Model</p>
    }

    <div class="form-paper">
        <div class="form-group">
            <label>Date *</label>
            <input type="date" @bind="activityDate" class="form-control" />
        </div>

        <div class="form-group">
            <label>Transfer Type *</label>
            <select @bind="transferData.TransferType" class="form-control">
                <option value="">Select...</option>
                <option value="Gift">Gift</option>
                <option value="Inheritance">Inheritance</option>
                <option value="Trade">Trade</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div class="form-group">
            <label>From Whom *</label>
            <input type="text" @bind="transferData.FromWhom" class="form-control" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea @bind="transferData.Description" class="form-control" rows="3" placeholder="Additional details about the transfer"></textarea>
        </div>

        <div class="form-group">
            <label>Notes (Legal Documentation Notes)</label>
            <textarea @bind="notes" class="form-control" rows="4"></textarea>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-error">
                @errorMessage
            </div>
        }

        <div class="form-actions">
            <button @onclick="SaveTransfer" class="btn-icon-only" title="Save">
            <Icon Name="save" />
        </button>
            <button @onclick="Cancel" class="btn-icon-only" title="Cancel">
            <Icon Name="back" />
        </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int FirearmId { get; set; }

    [Parameter]
    public int? ActivityId { get; set; }

    private Firearm? firearm;
    private Activity? existingActivity;
    private DateTime? activityDate;
    private string notes = string.Empty;
    private string errorMessage = string.Empty;
    private TransferActivityData transferData = new();
    private bool isEditMode => ActivityId.HasValue;

    protected override async Task OnInitializedAsync()
    {
        firearm = await FirearmRepository.GetByIdAsync(FirearmId);
        if (firearm == null)
        {
            Navigation.NavigateTo("/firearms");
            return;
        }

        if (isEditMode)
        {
            existingActivity = await ActivityRepository.GetByIdAsync(ActivityId!.Value);
            if (existingActivity == null || existingActivity.ActivityType != ActivityType.Transfer)
            {
                Navigation.NavigateTo($"/firearms/detail/{FirearmId}");
                return;
            }

            activityDate = existingActivity.ActivityDate;
            notes = existingActivity.Notes;

            if (!string.IsNullOrEmpty(existingActivity.AdditionalData))
            {
                try
                {
                    transferData = JsonSerializer.Deserialize<TransferActivityData>(existingActivity.AdditionalData) ?? new();
                }
                catch
                {
                    transferData = new();
                }
            }
        }
    }

    private async Task SaveTransfer()
    {
        errorMessage = string.Empty;

        if (!activityDate.HasValue)
        {
            errorMessage = "Date is required";
            return;
        }

        if (string.IsNullOrWhiteSpace(transferData.TransferType))
        {
            errorMessage = "Transfer Type is required";
            return;
        }

        if (string.IsNullOrWhiteSpace(transferData.FromWhom))
        {
            errorMessage = "From Whom is required";
            return;
        }

        try
        {
            if (isEditMode && existingActivity != null)
            {
                existingActivity.ActivityDate = activityDate.Value;
                existingActivity.Description = $"{transferData.TransferType} from {transferData.FromWhom}";
                existingActivity.Notes = notes;
                existingActivity.AdditionalData = JsonSerializer.Serialize(transferData);

                await ActivityRepository.UpdateAsync(existingActivity);
            }
            else
            {
                var activity = new Activity
                {
                    FirearmId = FirearmId,
                    ActivityType = ActivityType.Transfer,
                    ActivityDate = activityDate.Value,
                    Description = $"{transferData.TransferType} from {transferData.FromWhom}",
                    Notes = notes,
                    AdditionalData = JsonSerializer.Serialize(transferData)
                };

                await ActivityRepository.AddAsync(activity);
            }

            Navigation.NavigateTo($"/firearms/detail/{FirearmId}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving transfer: {ex.Message}";
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo($"/firearms/detail/{FirearmId}");
    }
}