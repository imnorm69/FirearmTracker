@page "/firearms/{FirearmId:int}/purchase/add"
@page "/firearms/{FirearmId:int}/purchase/{ActivityId:int}/edit"
@attribute [Authorize(Roles = "Owner,Administrator,PowerUser")]
@using FirearmTracker.Core.Interfaces
@using FirearmTracker.Core.Models
@using FirearmTracker.Core.Enums
@using System.Text.Json
@using FirearmTracker.Web.Components
@inject IActivityRepository ActivityRepository
@inject IFirearmRepository FirearmRepository
@inject NavigationManager Navigation
@rendermode InteractiveServer

<link href="css/firearms.css" rel="stylesheet" />

<div class="form-container">
    <h3 class="firearms-header">@(isEditMode ? "Edit" : "Record") Purchase</h3>

    @if (firearm != null)
    {
        <p><strong>Firearm:</strong> @firearm.Manufacturer @firearm.Model</p>
    }

    <div class="form-paper">
        <div class="form-group">
            <label>Purchase Date *</label>
            <input type="date" @bind="purchaseDate" class="form-control" />
        </div>

        <div class="form-group">
            <label>Purchase Price *</label>
            <input type="number" step="0.01" @bind="purchasePrice" class="form-control" />
        </div>

        <div class="form-group">
            <label>Purchased From *</label>
            <select @bind="purchaseData.PurchasedFromType" class="form-control">
                <option value="">Select...</option>
                <option value="Dealer">Dealer</option>
                <option value="Private Party">Private Party</option>
            </select>
        </div>

        <div class="form-group">
            <label>Name *</label>
            <input type="text" @bind="purchaseData.PurchasedFromName" class="form-control" />
        </div>

        <div class="form-group">
            <label>Street Address</label>
            <input type="text" @bind="purchaseData.StreetAddress" class="form-control" />
        </div>

        <div class="form-group">
            <label>City</label>
            <input type="text" @bind="purchaseData.City" class="form-control" />
        </div>

        <div class="form-group">
            <label>State</label>
            <input type="text" @bind="purchaseData.State" class="form-control" maxlength="2" />
        </div>

        <div class="form-group">
            <label>ZIP Code</label>
            <input type="text" @bind="purchaseData.ZipCode" class="form-control" maxlength="10" />
        </div>

        <div class="form-group">
            <label>Phone</label>
            <input type="tel" @bind="purchaseData.Phone" class="form-control" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" @bind="purchaseData.Email" class="form-control" />
        </div>

        <div class="form-group">
            <label>Notes</label>
            <textarea @bind="notes" class="form-control" rows="4"></textarea>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-error" style="background-color: #f8d7da; color: #721c24; padding: 10px; border-radius: 4px; margin-bottom: 15px;">
                @errorMessage
            </div>
        }

        <div class="form-actions">
            <button @onclick="SavePurchase" class="btn-icon-only" title="Save">
            <Icon Name="save" />
        </button>
            <button @onclick="Cancel" class="btn-icon-only" title="Cancel">
            <Icon Name="back" />
        </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int FirearmId { get; set; }

    [Parameter]
    public int? ActivityId { get; set; }

    private Firearm? firearm;
    private Activity? existingActivity;
    private DateTime? purchaseDate;
    private decimal? purchasePrice;
    private string notes = string.Empty;
    private string errorMessage = string.Empty;
    private PurchaseActivityData purchaseData = new();
    private bool isEditMode => ActivityId.HasValue;

    protected override async Task OnInitializedAsync()
    {
        firearm = await FirearmRepository.GetByIdAsync(FirearmId);
        if (firearm == null)
        {
            Navigation.NavigateTo("/firearms");
            return;
        }

        if (isEditMode)
        {
            existingActivity = await ActivityRepository.GetByIdAsync(ActivityId!.Value);
            if (existingActivity == null || existingActivity.ActivityType != ActivityType.Purchase)
            {
                Navigation.NavigateTo($"/firearms/detail/{FirearmId}");
                return;
            }

            // Load existing data
            purchaseDate = existingActivity.ActivityDate;
            purchasePrice = existingActivity.Amount;
            notes = existingActivity.Notes;

            if (!string.IsNullOrEmpty(existingActivity.AdditionalData))
            {
                try
                {
                    purchaseData = JsonSerializer.Deserialize<PurchaseActivityData>(existingActivity.AdditionalData) ?? new();
                }
                catch
                {
                    purchaseData = new();
                }
            }
        }
    }

    private async Task SavePurchase()
    {
        errorMessage = string.Empty;

        // Validation
        if (!purchaseDate.HasValue)
        {
            errorMessage = "Purchase Date is required";
            return;
        }

        if (!purchasePrice.HasValue || purchasePrice.Value <= 0)
        {
            errorMessage = "Purchase Price is required and must be greater than zero";
            return;
        }

        if (string.IsNullOrWhiteSpace(purchaseData.PurchasedFromType))
        {
            errorMessage = "Purchased From type is required";
            return;
        }

        if (string.IsNullOrWhiteSpace(purchaseData.PurchasedFromName))
        {
            errorMessage = "Purchased From Name is required";
            return;
        }

        try
        {
            if (isEditMode && existingActivity != null)
            {
                // Update existing activity
                existingActivity.ActivityDate = purchaseDate.Value;
                existingActivity.Amount = purchasePrice.Value;
                existingActivity.Description = $"Purchased from {purchaseData.PurchasedFromName}";
                existingActivity.Notes = notes;
                existingActivity.AdditionalData = JsonSerializer.Serialize(purchaseData);

                await ActivityRepository.UpdateAsync(existingActivity);
            }
            else
            {
                // Create new activity
                var activity = new Activity
                {
                    FirearmId = FirearmId,
                    ActivityType = ActivityType.Purchase,
                    ActivityDate = purchaseDate.Value,
                    Amount = purchasePrice.Value,
                    Description = $"Purchased from {purchaseData.PurchasedFromName}",
                    Notes = notes,
                    AdditionalData = JsonSerializer.Serialize(purchaseData)
                };

                await ActivityRepository.AddAsync(activity);
            }

            Navigation.NavigateTo($"/firearms/detail/{FirearmId}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving purchase: {ex.Message}";
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo($"/firearms/detail/{FirearmId}");
    }
}