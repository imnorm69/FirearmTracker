@page "/reports/firearm-inventory"
@attribute [Authorize]
@using FirearmTracker.Core.Interfaces
@using FirearmTracker.Core.Models.Reports
@using FirearmTracker.Core.Enums
@using FirearmTracker.Web.Components
@inject IReportService ReportService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<link href="css/firearms.css" rel="stylesheet" />

<div class="firearms-container">
    <div class="firearms-header-row">
        <h3 class="firearms-header">Firearm Inventory Report</h3>
        <button @onclick="BackToReports" class="btn-icon-only" title="Back to Reports">
            <Icon Name="back" />
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading">Loading configuration...</div>
    }
    else if (config != null)
    {
        <!-- Configuration Panel -->
        <div class="report-config-panel">
            <h4>Report Configuration</h4>

            <!-- Column Selection -->
            <div class="config-section">
                <h5>Columns to Include</h5>
                <div class="column-checkboxes">
                    @foreach (var column in config.AvailableColumns)
                    {
                        <label class="checkbox-label">
                            <input type="checkbox" 
                                   checked="@config.SelectedColumns.Contains(column)"
                                   @onchange="@(e => ToggleColumn(column, (bool)e.Value!))" />
                            @FormatColumnName(column)
                        </label>
                    }
                </div>
            </div>

            <!-- Filters -->
            <div class="config-section">
                <h5>Filters</h5>
                <div class="filter-controls">
                    <!-- Manufacturer Filter -->
                    <div class="filter-group">
                        <label>Manufacturer</label>
                        <select multiple class="form-control" style="height: 100px;">
                            <option disabled>-- Select one or more --</option>
                            @foreach (var manufacturer in availableManufacturers)
                            {
                                <option>@manufacturer</option>
                            }
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    <!-- Caliber Filter -->
                    <div class="filter-group">
                        <label>Caliber</label>
                        <select multiple class="form-control" style="height: 100px;">
                            <option disabled>-- Select one or more --</option>
                            @foreach (var caliber in availableCalibers)
                            {
                                <option>@caliber</option>
                            }
                        </select>
                        <small class="text-muted">Hold Ctrl/Cmd to select multiple</small>
                    </div>

                    <!-- Date Purchased Filter -->
                    <div class="filter-group">
                        <label>Date Purchased</label>
                        <select class="form-control" style="margin-bottom: 8px;">
                            <option value="">No filter</option>
                            <option value="before">Before date</option>
                            <option value="after">After date</option>
                            <option value="between">Between dates</option>
                        </select>
                        <input type="date" class="form-control" placeholder="Start date" />
                        <!-- Second date input would show if "between" is selected -->
                    </div>
                </div>
            </div>

            <!-- Sorting -->
            <div class="config-section">
                <h5>Sort By</h5>
                <p class="text-muted" style="font-size: 0.9rem;">Click fields in order of priority (last clicked = highest priority)</p>
                <div class="sort-controls">
                    @for (int i = 0; i < sortFields.Count; i++)
                    {
                        var index = i;
                        var sort = sortFields[i];
                        <div class="sort-field">
                            <span class="sort-priority">@(i + 1)</span>
                            <span class="sort-name">@FormatColumnName(sort.FieldName)</span>
                            <button @onclick="() => ToggleSortDirection(index)" class="btn-sm">
                                @(sort.IsDescending ? "↓ Desc" : "↑ Asc")
                            </button>
                            <button @onclick="() => RemoveSortField(index)" class="btn-sm">×</button>
                        </div>
                    }
                </div>
                <div class="available-sort-fields">
                    @foreach (var column in config.SelectedColumns.Where(c => !sortFields.Any(s => s.FieldName == c)))
                    {
                        <button @onclick="() => AddSortField(column)" class="btn-sm">
                            + @FormatColumnName(column)
                        </button>
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="report-actions">
                <button @onclick="GenerateReport" class="btn btn-primary">
                    <Icon Name="view" /> Generate Report
                </button>
                <button @onclick="PrintReport" class="btn btn-secondary" disabled="@(reportResult == null)">
                    <Icon Name="printer" /> Print
                </button>
                <button @onclick="ExportToPdf" class="btn btn-secondary" disabled="@(reportResult == null)">
                    <Icon Name="export" /> Export PDF
                </button>
                <button @onclick="ExportToExcel" class="btn btn-secondary" disabled="@(reportResult == null)">
                    <Icon Name="export" /> Export Excel
                </button>
                <button @onclick="ExportToCsv" class="btn btn-secondary" disabled="@(reportResult == null)">
                    <Icon Name="export" /> Export CSV
                </button>
            </div>
        </div>

        <!-- Report Preview -->
        @if (reportResult != null)
        {
            <div class="report-preview">
                <h4>@reportResult.ReportTitle</h4>
                <p class="text-muted">Generated: @reportResult.GeneratedDate.ToString("f") | Total Records: @reportResult.TotalRecords</p>

                <div class="table-responsive">
                    <table class="firearms-table">
                        <thead>
                            <tr>
                                @foreach (var header in reportResult.ColumnHeaders)
                                {
                                    <th>@FormatColumnName(header)</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in reportResult.Rows)
                            {
                                <tr>
                                    @foreach (var header in reportResult.ColumnHeaders)
                                    {
                                        <td>@FormatCellValue(row[header])</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>

<style>
