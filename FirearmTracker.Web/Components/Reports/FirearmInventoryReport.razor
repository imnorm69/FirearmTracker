    }

    .btn-primary:hover {
        background: #0056b3;
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

    .btn-secondary:hover:not(:disabled) {
        background: #5a6268;
    }

    .btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .report-preview {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
    }

    .report-preview h4 {
        margin-bottom: 8px;
    }

    .table-responsive {
        margin-top: 20px;
        overflow-x: auto;
    }
</style>

@code {
    private bool isLoading = true;
    private TabularReportConfiguration? config;
    private TabularReportResult? reportResult;
    private List<SortOption> sortFields = new();
    private List<string> availableManufacturers = new();
    private List<string> availableCalibers = new();

    protected override async Task OnInitializedAsync()
    {
        config = await ReportService.GetFirearmInventoryConfigurationAsync();
        availableManufacturers = await ReportService.GetDistinctManufacturersAsync();
        availableCalibers = await ReportService.GetDistinctCalibersAsync();
        isLoading = false;
    }

    private void ToggleColumn(string column, bool isChecked)
    {
        if (isChecked && !config!.SelectedColumns.Contains(column))
        {
            config.SelectedColumns.Add(column);
        }
        else if (!isChecked && config!.SelectedColumns.Contains(column))
        {
            config.SelectedColumns.Remove(column);
            // Remove from sort if it was there
            sortFields.RemoveAll(s => s.FieldName == column);
        }
    }

    private void AddSortField(string fieldName)
    {
        sortFields.Add(new SortOption
        {
            FieldName = fieldName,
            DisplayName = FormatColumnName(fieldName),
            Priority = sortFields.Count,
            IsDescending = false
        });
    }

    private void RemoveSortField(int index)
    {
        sortFields.RemoveAt(index);
        // Recalculate priorities
        for (int i = 0; i < sortFields.Count; i++)
        {
            sortFields[i].Priority = i;
        }
    }

    private void ToggleSortDirection(int index)
    {
        sortFields[index].IsDescending = !sortFields[index].IsDescending;
    }

    private async Task GenerateReport()
    {
        if (config == null) return;
        
        config.SortOptions = sortFields;
        reportResult = await ReportService.GenerateFirearmInventoryReportAsync(config);
    }

    private void PrintReport()
    {
        // TODO: Implement print functionality
    }

    private async Task ExportToPdf()
    {
        // TODO: Implement PDF export
    }

    private async Task ExportToExcel()
    {
        // TODO: Implement Excel export
    }

    private async Task ExportToCsv()
    {
        // TODO: Implement CSV export
    }

    private void BackToReports()
    {
        Navigation.NavigateTo("/reports");
    }

    private string FormatColumnName(string columnName)
    {
        // Convert PascalCase to Title Case with spaces
        return System.Text.RegularExpressions.Regex.Replace(columnName, "([A-Z])", " $1").Trim();
    }

    private string FormatCellValue(object? value)
    {
        if (value == null) return "-";
        
        return value switch
        {
            DateTime dt => dt.ToShortDateString(),
            decimal d => d.ToString("C"),
            _ => value.ToString() ?? "-"
        };
    }
}
