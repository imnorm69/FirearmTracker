@page "/reports"
@attribute [Authorize]
@using FirearmTracker.Web.Components
@inject NavigationManager Navigation
@rendermode InteractiveServer

<link href="css/firearms.css" rel="stylesheet" />

<div class="firearms-container">
    <h3 class="firearms-header">Reports</h3>

    <div class="report-cards">
        <div class="report-card" @onclick='() => Navigation.NavigateTo("/reports/firearm-inventory")'>
            <div class="report-card-icon">
                <Icon Name="firearms" />
            </div>
            <div class="report-card-content">
                <h4>Firearm Inventory</h4>
                <p>Tabular report of all firearms with customizable columns, filters, and sorting</p>
                <div class="report-card-badges">
                    <span class="badge">View</span>
                    <span class="badge">Print</span>
                    <span class="badge">Excel</span>
                    <span class="badge">CSV</span>
                    <span class="badge">PDF</span>
                </div>
            </div>
        </div>

        <div class="report-card" @onclick='() => Navigation.NavigateTo("/reports/firearm-detail")'>
            <div class="report-card-icon">
                <Icon Name="documents" />
            </div>
            <div class="report-card-content">
                <h4>Firearm Detail</h4>
                <p>Document-style report with firearm details and related information</p>
                <div class="report-card-badges">
                    <span class="badge">View</span>
                    <span class="badge">Print</span>
                    <span class="badge">PDF</span>
                </div>
            </div>
        </div>

        <div class="report-card disabled" title="Coming Soon">
            <div class="report-card-icon">
                <Icon Name="ammunition" />
            </div>
            <div class="report-card-content">
                <h4>Ammunition Inventory</h4>
                <p>Current ammunition stock levels and transaction history</p>
                <div class="report-card-badges">
                    <span class="badge">Coming Soon</span>
                </div>
            </div>
        </div>

        <div class="report-card disabled" title="Coming Soon">
            <div class="report-card-icon">
                <Icon Name="range-session" />
            </div>
            <div class="report-card-content">
                <h4>Shooting Session History</h4>
                <p>History of all shooting sessions with ammunition consumption</p>
                <div class="report-card-badges">
                    <span class="badge">Coming Soon</span>
                </div>
            </div>
        </div>

        <div class="report-card disabled" title="Coming Soon">
            <div class="report-card-icon">
                <Icon Name="maintenance" />
            </div>
            <div class="report-card-content">
                <h4>Maintenance History</h4>
                <p>All maintenance activities across your firearm collection</p>
                <div class="report-card-badges">
                    <span class="badge">Coming Soon</span>
                </div>
            </div>
        </div>

        <div class="report-card disabled" title="Coming Soon">
            <div class="report-card-icon">
                <Icon Name="valuations" />
            </div>
            <div class="report-card-content">
                <h4>Valuation History</h4>
                <p>Track the value of your firearms over time</p>
                <div class="report-card-badges">
                    <span class="badge">Coming Soon</span>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .report-cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .report-card {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        gap: 15px;
    }

    .report-card:not(.disabled):hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-color: #007bff;
        transform: translateY(-2px);
    }

    .report-card.disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .report-card-icon {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .report-card-icon svg {
        width: 32px;
        height: 32px;
        fill: #495057;
    }

    .report-card-content {
        flex: 1;
    }

    .report-card-content h4 {
        margin: 0 0 8px 0;
        font-size: 1.1rem;
        color: #212529;
    }

    .report-card-content p {
        margin: 0 0 12px 0;
        font-size: 0.9rem;
        color: #6c757d;
        line-height: 1.4;
    }

    .report-card-badges {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
    }

    .report-card-badges .badge {
        background: #e9ecef;
        color: #495057;
        padding: 3px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
    }
</style>

